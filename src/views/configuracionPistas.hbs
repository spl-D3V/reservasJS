<form action="/modificacion" method="POST">
<input type="hidden" name="_id" value="{{pista._id}}" />
<div class="form-row">
    <div class="form-group col-md-5">
        <label for="inputName">Nombre</label>
        <input type="text" class="form-control" id="inputName" name="nombre" placeholder="Nombre" value="{{pista.nombre}}">
    </div>
    <div class="form-group col-md-5">
        <label for="inputDeporte">Deporte</label>
        <input type="text" class="form-control" id="inputDeporte" name="deporte" placeholder="Deporte" value="{{pista.deporte}}">
    </div>
    <div class="form-group col-md-2">
        <div class="form-check">
            <input class="form-check-input" type="checkbox" id="gridCheck" name="estado" value="true" {{#if pista.estado}} checked {{/if}}>
            <label class="form-check-label" for="gridCheck">Disponible</label>
        </div>
    </div>
</div>
<div class="form-row">
    <table class="table col-xs-12">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Lunes</th>
                <th scope="col">Martes</th>
                <th scope="col">Miercoles</th>
                <th scope="col">Jueves</th>
                <th scope="col">Viernes</th>
                <th scope="col">Sabado</th>
                <th scope="col">Domingo</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <th scope="row">Disponible</th>
                <td><input class="form-check-input" type="checkbox" id="checkLunes"></td>
                <td><input class="form-check-input" type="checkbox" id="checkMartes"></td>
                <td><input class="form-check-input" type="checkbox" id="checkMiercoles"></td>
                <td><input class="form-check-input" type="checkbox" id="checkJueves"></td>
                <td><input class="form-check-input" type="checkbox" id="checkViernes"></td>
                <td><input class="form-check-input" type="checkbox" id="checkSabado"></td>
                <td><input class="form-check-input" type="checkbox" id="checkDomingo"></td>
            </tr>
            <tr>
                <th scope="row">Hora inicio</th>
                <td scope="col">Lunes</td>
                <td scope="col">Martes</td>
                <td scope="col">Miercoles</td>
                <td scope="col">Jueves</td>
                <td scope="col">Viernes</td>
                <td scope="col">Sabado</td>
                <td scope="col">Domingo</td>
            </tr>
            <tr>
                <th scope="row">Hora fin</th>
                <td scope="col">Lunes</td>
                <td scope="col">Martes</td>
                <td scope="col">Miercoles</td>
                <td scope="col">Jueves</td>
                <td scope="col">Viernes</td>
                <td scope="col">Sabado</td>
                <td scope="col">Domingo</td>
            </tr>
        </tbody>
    </table>
</div>
    <button type="submit" class="btn btn-primary">Guardar</button>
</form>